.message
  .message-upper
    .message-upper__group
      = message.user.name
    .message-upper__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message-main
    - if message.content.present?
      %p.message-main__text
        = message.content
    = image_tag message.image.url, class: 'message-main__image' if message.image.present?
